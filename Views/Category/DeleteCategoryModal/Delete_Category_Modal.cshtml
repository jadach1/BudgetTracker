@model List<Category>

<div id="delete_category_modal" style="display: none;z-index: 3;border: black solid 2px">
    <i id="delete-category-hide-button" class="bi bi-x-square-fill" style="margin: 5%;display: flex;justify-content:end;"></i>
    <h4 style="margin: 10%;">Warning.  Deleting this Category will result in all Expenses with this Category to also be Delete.  You have the option to transfer the Expenses to another Category.</h4>
    <a style="margin: 10%;" class="d-block btn btn-secondary">Transfer</a>
    <a style="margin: 10%;" class="d-block row btn btn-danger">No, Delete Everything</a>
</div>

<div id="delete_category_modal_dropdown_list" style="display: none;z-index: 4;border: black solid 2px;">
    <h4 style="display: flex;justify-content:center;margin: 5%">Select New Category</h4>
    <ul class="text-center" style=" 
                        position: relative;
                       background-color: #170229;
                       border: aqua solid;
                       overflow-y: auto;
                       scrollbar-width: 1px; 
                       scrollbar-color: #44d9e8 #6f42c1 ;
                       scrollbar-width: thin;
                       display: flex;
                       flex-direction: column;
                       margin: 8%;">
            @* <input id="selected-category-to-be-transferred" name="name" value="" type="number" style="display: none;"/> *@
             @foreach (var obj in Model.OrderBy(u => u.Name))
            {

                // dynamically create ID's for elements below
                var displayName = "TransferCategory." + @obj.Id;
                <a id=@displayName style="border: aqua solid; margin:2%;position: relative;left:-10%;" class="btn btn-outline-light">@obj.Name</a>
            }
    </ul>
    <p class="text-center text-white" style="margin: 5%;"></p>
    <a id="delete_category_modal_confirm_Transfer" class="btn btn-secondary" style="margin: 5%;margin-left: 25%;">Confirm</a>
    <a  class="btn btn-dark" style="margin: 5%;">Cancel</a>
</div>

<div id="delete_category_final_confirmation" style="display: none;position: fixed;height: 175px; width: 175px;padding: 5px;border: solid black;z-index: 5;background-color: brown">
    <h4>Are you sure ?</h4>
    <p></p>
    <div>
        <a class="btn btn-danger">yes</a>
        <a class="btn btn-light">no</a>
    </div>
</div>
<div id="delete_category_modal_mask" style="display:none;z-index: 2;"></div>