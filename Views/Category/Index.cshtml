@model List<Category>

<h1>CATEGORIES</h1>
<div>
   <div class="row">
     <a asp-controller="Category" asp-action="Create" class="btn btn-secondary mb-3">
       <i class="bi bi-plus-circle"></i> Create New Category
    </a>
   </div>
    <table>
        <thead>
            <tr>Category Name</tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.OrderBy(u=>u.Name)){
                <tr>
                <td> @obj.Name</td>
                <td class=" btn-group" role="group">
                    <a asp-controller="Category" asp-action="Edit" class="w-75 h-25 btn btn-primary mx-2">
                        <i class="bi bi-pencil px-3"></i> Edit
                    </a>
                     <a asp-controller="Category" asp-action="Edit" class="w-75 h-25 btn btn-primary mx-2">
                        <i class="bi bi-trash"></i> Remove
                    </a>   
                    </td>
                </tr>
               
            }       
        </tbody>
    </table>
</div>