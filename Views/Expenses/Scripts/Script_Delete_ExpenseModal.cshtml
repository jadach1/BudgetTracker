<script>
function toggle_delete_expense_modal($expense_id, Id){
    // pin the modal to the expense tr row
    // adjust the size , test the device sizes

    
    const $DeleteModal = $("#delete_expense_modal");
    
    const height =+$expense_id.height()*2;
    const width = +$expense_id.width();

    $DeleteModal.css({
        position: "absolute",
        zIndex: 3,
        backgroundColor: "#6f42c1",
        padding: "10%",
        height: height,
        width: width,
    });

    $DeleteModal.show();

    const $title = $( "#delete_expense_modal h3 " );
    $title.css({
        fontSize: "24px",
    });
    const $yes_btn = $( "#delete_expense_modal div a" ).first();
    const $no_btn = $("#delete_expense_modal div a" ).last();

    $yes_btn.addClass("btn btn-secondary m-3");
    $no_btn.addClass("btn btn-danger m-3");
    $no_btn.on("click", function(){$DeleteModal.hide("fade")});
    $expense_id.append($DeleteModal);
    //alterPosition("delete_expense_modal");
}
</script>