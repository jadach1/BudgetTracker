<div class="container">
    <form class=" p-2 m-5 col-10" action="">
        <div class="col-12 d-flex justify-content-end">
            <i id="expense-form-hide-button" class="bi bi-x-square-fill"></i>
        </div>
        <h1>Create < @ViewData["month"] ></h1>
        <div class="col-4 my-2 ">
            <label for=" type">Type</label>
            <div class="text-center">
                <select class="text-center" name="type" id="expense-type">
                    <option value="one">one</option>
                    <option value="two">two</option>
                    <option value="three">three</option>
                </select>
            </div>
        </div>
        <div class="col-4 my-2 ">
            <label for="amount">Amount</label>
            <div class="text-center">
                <input type="number" name="amount" id="expense-amount">
            </div>
        </div>

        <div class="col-4 my-2 ">
            <label for="date">Date</label>
            <div class="text-center">
                <input type="date" name="date" id="expense-date">
            </div>
        </div>

        <div class="col-4 my-2 ">
            <label for="description">Description</label>
            <div class="text-center">
                <textarea name="description" id="expense-description" cols="20" rows="3"></textarea>
            </div>
        </div>
        <div class="col-4 my-2">
            <div class="text-center">
                <a id="expense-form-submit-button" class="btn btn-outline-secondary">Enter</a>
            </div>
        </div>
    </form>
</div>
