<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] My Budget Workbook 1.3</title>
    <!--LINKS-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/buttons.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ripple-effect.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/createExpenseFormStyleSheet.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/editExpenseFormStyleSheet.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/changeMonthFormStyleSheet.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/expenseTablesStyleSheet.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.3/themes/smoothness/jquery-ui.css">
    <!--SCRIPTS WHICH NEED TO LOAD BEFORE EVERYTING ELSE-->
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://code.jquery.com/ui/1.13.3/jquery-ui.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>

<body>
    
    <header>
        <partial name="../Nav/Navigation.cshtml"   />
        <partial name="../Account/Logout.cshtml" />
    </header>
    
    <div class="container">
        <main id="main_body" role="main" class="p-3  border border-3 border-primary rounded-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy;  Budget_Man - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

<!--SCRIPTS-->
    @* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
    
    <script src="~/js/ripple-effect.min.js"></script>
    <script src="~/js/simple-notif.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
     <script src="~/js/currency_library.js" asp-append-version="true"></script>
   <script src="~/js/notif-checker-agent.js" asp-append-version="true"></script>
    <script>
        //set ripple effect for deleting elements
        $(document).ready(function () {
            $(".ripple-effect").rippleEffect();
        });

       //Display current Date for user
        $("#selectYearLabel").html(new Date().toDateString())
       
    </script>
    
    <!--PART OF THE INotyfService COMPONENT PACKAGE-->
     @await Component.InvokeAsync("Notyf")
     @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
