<div>
    <h3>Are you sure you want to delete ?</h3>
    <div>
        <form id="deleteForm" method="post" asp-action="Delete" asp-controller="FixedExpenses">
            <input type="text" class="form-control" name="id" id="deleteID" hidden>
            <a class="btn btn-danger" onclick="confirmDelete()" >yes</a>
            <a  class="btn btn-secondary" onclick="hide()" >no</a>
        </form>
    </div>
</div>

<script>
    function confirmDelete(){
        const form = document.getElementById("deleteForm");
        form.submit();
    }

    function hide(){
        const partialDeleteForm = document.getElementById("partialDeleteForm");
        partialDeleteForm.hidden=true;
    }
</script>